<%= content_tag(:span, "New transaction", :class =>"rightSideTitles" ) %>

<% form_tag("/transactions",{:multipart => true}) do %>
  
    
  <p>
    <%= label_tag "file", "File to upload" %>
    <br />
    <%= file_field_tag("file") %>
  </p>
  <p>
    <%= submit_tag "Upload" %>
  </p>
<% end %>

<% form_tag("/transactions",{:multipart => true}) do%>
  
  <p>
    <script>
			window.dhx_globalImgPath="../images/codebase/imgs/";
		</script>
    <%= label_tag "description", "Description of transaction:" %>
    <br />
    <%= select("transaction","description", Transaction.find(:all,:select => 'DISTINCT description').collect {|p| [p.description,p.description]}, {:include_blank =>true},{:id => "select_transaction"}) %>
    <script>
        var z=dhtmlXComboFromSelect("select_transaction");
        z.enableFilteringMode(true);
        z.enableOptionAutoWidth(1);
    </script>
   </p>
   
  <p>
    <%= label_tag "amount", "amount($):" %>
    <br />
    <%= text_field("transaction","amount") %>
  </p>
  <p>
    <%= label_tag "date", "Date of transaction" %>
    <br />
    <%= date_select("transaction","transaction_date") %>
  </p>
  <p>
    <%= submit_tag "Create" %>
  </p>

<% end %>